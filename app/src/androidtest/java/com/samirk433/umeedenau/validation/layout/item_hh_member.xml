<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_margin="8dp"
android:id="@+id/card_view"
android:layout_height="60dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/mainLayout"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="50dp"

        android:gravity="center_vertical"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView

            android:layout_width="35dp"
            android:id="@+id/text_item_member_sno"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/circl_b"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_margin="2dp"
            android:layout_marginLeft="5dp"
            android:textColor="#787878"
            android:textSize="14sp"
            android:layout_weight=".1"
            android:text="@string/default_p"/>


        <TextView
            android:id="@+id/text_item_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="9"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textAppearance="@style/MyTextAppearance"
            android:text="@string/default_guest_name"/>

        <ImageView
            android:id="@+id/img_item_member_del"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="25dp"
            android:visibility="visible"
            android:background="@drawable/ic_delete"

            android:layout_weight=".1"

            />
    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
