<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LHWDashbord">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.irfansyed.umeedenau.validation.LHWDashbord" />
    </data>





    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:background="#EEEEEE"
        android:orientation="vertical"



        android:layout_marginBottom="5dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="25dp"
        android:scrollbarSize="50dip">
        <!-- Parent layout starts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:layout_marginTop="25dp"

            android:orientation="vertical">









            <!-- GS1 starts -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"


                >



                <LinearLayout
                    android:id="@+id/Lv_lhwf1a1"
                    style="@style/Q_Linerlayout_v"

                    >

                    <TextView

                        style="@style/TextView"
                        android:text="@string/lhwf1a1"

                        />

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <Spinner
                            style="@style/Combox"
                            android:id="@+id/lhwf1a1"
                            >


                        </Spinner>


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- GS1 ends-->


            <!-- GS2 starts -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"


                >



                <LinearLayout
                    android:id="@+id/Lv_lhwf1a2"
                    style="@style/Q_Linerlayout_v"

                    >

                    <TextView

                        style="@style/TextView"
                        android:text="@string/lhwf1a2"

                        />

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <Spinner
                            style="@style/Combox"
                            android:id="@+id/lhwf1a2"
                            >


                        </Spinner>


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- GS2 ends-->


            <!-- GS4 starts -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"


                >



                <LinearLayout
                    android:id="@+id/Lv_lhwf1a3"
                    style="@style/Q_Linerlayout_v"

                    >

                    <TextView

                        style="@style/TextView"
                        android:text="@string/lhwf1a3"

                        />

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <Spinner
                            style="@style/Combox"
                            android:id="@+id/lhwf1a3"
                            >


                        </Spinner>


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- GS3 ends-->


            <!-- GS4 starts -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"


                >



                <LinearLayout
                    android:id="@+id/Lv_lhwf1a4"
                    style="@style/Q_Linerlayout_v"

                    >

                    <TextView

                        style="@style/TextView"
                        android:text="@string/lhwf1a4"

                        />

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <Spinner
                            style="@style/Combox"
                            android:id="@+id/lhwf1a4"
                            >


                        </Spinner>


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- GS4 ends-->



            <!-- Button -->
            <android.support.v7.widget.CardView
                style="@style/Q_CardView"
                android:layout_marginTop="15dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F1F1F1"
                    android:orientation="horizontal"
              android:layout_margin="3dp"


                    android:weightSum="100"
                    >


                <Button
                    android:id="@+id/btnSourceRegister"
                    style="@style/Button_Next"
                    android:layout_margin="10dp"
                    android:layout_weight="50"
                    android:text="Source Register " />

                <Button
                    android:id="@+id/btn_Community"
                    style="@style/Button_Next"
                    android:layout_margin="10dp"
                    android:layout_weight="50"
                    android:text="Community" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Button Next Ends-->


        </LinearLayout>

    </ScrollView>



</layout>