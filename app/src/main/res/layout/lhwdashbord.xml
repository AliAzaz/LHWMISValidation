<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LHWDashbord">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.irfansyed.umeedenau.validation.LHWDashbord" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="#EEEEEE"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="25dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:scrollbarSize="50dip">


        <!-- Parent layout starts -->
        <LinearLayout
            style="@style/vlinearlayout"
            android:layout_marginTop="25dp"
            android:background="#F1F1F1">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/uncolor" />

                <TextView
                    style="@style/TextView"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="20dp"
                    android:text="Select LHW Information"
                    android:textColor="#008E45" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:background="@color/hitnscolor" />


            <!-- GS1 starts -->
            <android.support.v7.widget.CardView
                android:id="@+id/cvlhwf1a1"
                style="@style/Q_CardView">

                <LinearLayout
                    android:id="@+id/Lv_lhwf1a1"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        style="@style/TextView"
                        android:text="@string/lhwf1a1" />

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <Spinner
                            android:id="@+id/lhwf1a1"
                            style="@style/Combox" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- GS1 ends-->


            <!-- GS2 starts -->
            <android.support.v7.widget.CardView
                android:id="@+id/cvlhwf1a2"
                style="@style/Q_CardView">

                <LinearLayout
                    android:id="@+id/Lv_lhwf1a2"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        style="@style/TextView"
                        android:text="@string/lhwf1a2" />

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <Spinner
                            android:id="@+id/lhwf1a2"
                            style="@style/Combox" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- GS2 ends-->


            <!-- GS4 starts -->
            <android.support.v7.widget.CardView
                android:id="@+id/cvlhwf1a3"
                style="@style/Q_CardView">

                <LinearLayout
                    android:id="@+id/Lv_lhwf1a3"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        style="@style/TextView"
                        android:text="@string/lhwf1a3" />

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <Spinner
                            android:id="@+id/lhwf1a3"
                            style="@style/Combox" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- GS3 ends-->


            <!-- GS4 starts -->
            <android.support.v7.widget.CardView
                android:id="@+id/cvlhwf1a4"
                style="@style/Q_CardView">

                <LinearLayout
                    android:id="@+id/Lv_lhwf1a4"
                    style="@style/Q_Linerlayout_v">

                    <TextView
                        style="@style/TextView"
                        android:text="@string/lhwf1a4" />

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <TextView
                            android:id="@+id/lhwf1a4"
                            style="@style/TextView" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-- GS4 ends-->


            <!-- Button -->
            <android.support.v7.widget.CardView
                style="@style/Q_CardView"
                android:layout_marginTop="15dp">

                <LinearLayout
                    style="@style/hlinearlayout"
                    android:layout_margin="3dp"
                    android:background="#F1F1F1"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/btnSourceRegister"
                        style="@style/Button_Next"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:text="Source Register " />

                    <Button
                        android:id="@+id/btn_Community"
                        style="@style/Button_Next"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:text="Community" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>


</layout>