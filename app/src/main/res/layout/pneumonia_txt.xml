<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/uncolor"
            />
        <TextView
            style="@style/TextView"
            android:text="MONITORING"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"
            android:textColor="#008E45"

            />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/hitnscolor" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:scrollbarSize="50dip">
        <!-- Parent layout starts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="vertical">




            <!-- Danger Sign title -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"


                    >

                    <TextView


                        style="@style/TextView"
                        android:text="REASSURANCE; Reasons"
                        android:textStyle="bold"
                        android:textColor="@color/black_overlay"
                        />





                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--Danger Sign  Ends-->


            <!-- P1 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PN1"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain to the participants about Pneumonia?"

                        />


            <EditText
               style="@style/EditText_varchar"
                android:id="@+id/txt_PN1"

                />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P1 Ends-->

            <!-- P2 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PN2"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain the preventions from pneumonia to participants?"

                        />


                    <EditText
                        style="@style/EditText_varchar"
                        android:id="@+id/txt_PN2"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P2 Ends-->

            <!-- P3 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PN3"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain the signs and symptoms of Pneumonia? "

                        />


                    <EditText
                        style="@style/EditText_varchar"
                        android:id="@+id/txt_PN3"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P3 Ends-->

            <!-- P4 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PN4"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain that what step should be taken in case of emergency during Pneumonia?"

                        />


                    <EditText
                        style="@style/EditText_varchar"
                        android:id="@+id/txt_PN4"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P4 Ends-->

            <!-- P5 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PN5"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain about ARI timer?"

                        />


                    <EditText
                        style="@style/EditText_varchar"
                        android:id="@+id/txt_PN5"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P5 Ends-->

            <!-- P6 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PN6"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain the treatment of Pneumonia?"

                        />


                    <EditText
                        style="@style/EditText_varchar"
                        android:id="@+id/txt_PN6"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P6 Ends-->

            <!-- P7 -->
            <android.support.v7.widget.CardView style="@style/Q_CardView"

                >


                <LinearLayout

                    style="@style/Q_Linerlayout_v"

                    android:id="@+id/Lv_PN7"
                    >

                    <TextView


                        style="@style/TextView"
                        android:text="Did LHW explain about the amoxicillin DT dose "

                        />


                    <EditText
                        style="@style/EditText_varchar"
                        android:id="@+id/txt_PN7"

                        />




                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!-- P7 Ends-->



            <!-- Button Next Starts-->
            <android.support.v7.widget.CardView
                style="@style/Q_CardView"
                >

                <Button
                    android:id="@+id/btn_Next_Pn"
                    style="@style/Button_Next"
                    android:layout_margin="10dp"

                    android:text="Next " />
            </android.support.v7.widget.CardView>

            <!-- Button Next Ends-->


        </LinearLayout>

    </ScrollView>


</LinearLayout>
