<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LHWDashbord">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.irfansyed.umeedenau.validation.Form1SectionE" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:scrollbarSize="50dip">
        <!-- Parent layout starts -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/uncolor" />

                <TextView
                    style="@style/TextView"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/lhwf1header_e"
                    android:textColor="#008E45" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/hitnscolor" />

            <LinearLayout
                android:id="@+id/SectionE"
                style="@style/Q_Linerlayout_v">


                <!-- lhwf1e1 starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e1"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e1"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/lhwf1e1" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/lhwf1e1"
                            style="@style/EditText_number"
                            android:hint="@string/num"
                            android:maxLength="2"
                            app:maxValue="50"
                            app:minValue="1"
                            app:type="range" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e1 ends-->


                <!-- lhwf1e2 starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e2"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e2"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/lhwf1e2" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/lhwf1e2"
                            style="@style/EditText_number"
                            android:hint="@string/num"
                            android:maxLength="2"
                            app:maxValue="10"
                            app:minValue="1"
                            app:type="range" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e2 ends-->


                <!-- lhwf1e3 starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e3"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e3"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/lhwf1e3" />

                        <EditText
                            android:id="@+id/lhwf1e3"
                            style="@style/EditText_Name"
                            android:hint="@string/name"
                            android:maxLength="50" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e3 ends-->


                <!-- lhwf1e4 starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e4"
                    style="@style/Q_CardView">

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/lhwf1e4" />

                        <EditText
                            android:id="@+id/lhwf1e4"
                            style="@style/EditText_Name"
                            android:hint="@string/name"
                            android:maxLength="50" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e4 ends-->


                <!-- lhwf1e4A starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e4A"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e4A"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/lhwf1e4A" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/lhwf1e4Aa"
                                style="@style/EditText_number"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="month"
                                android:maxLength="2"
                                app:maxValue="12"
                                app:minValue="1"
                                app:type="range" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/lhwf1e4Ab"
                                style="@style/EditText_number"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="Date"
                                android:maxLength="2"
                                app:maxValue="31"
                                app:minValue="1"
                                app:type="range" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e4A ends-->


                <!-- lhwf1e5 starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e5"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e5"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/lhwf1e5" />

                        <RadioGroup
                            android:id="@+id/lhwf1e5"
                            style="@style/RadioGroup"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/lhwf1e5_1"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_yes" />

                            <RadioButton
                                android:id="@+id/lhwf1e5_2"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_no" />

                            <RadioButton
                                android:id="@+id/lhwf1e5_3"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:text="Weight machine not working/available"
                                android:visibility="gone"
                                tools:visibility="visible" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e5 ends-->


                <!-- lhwf1e5b starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e5b"
                    style="@style/Q_CardView"
                    android:visibility='@{lhwf1e51.checked? View.GONE : View.VISIBLE}'>

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e5b"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="Why was birth weight not recorded?" />

                        <RadioGroup
                            android:id="@+id/lhwf1e5b"
                            style="@style/RadioGroup">

                            <RadioButton
                                android:id="@+id/lhwf1e5b_1"
                                style="@style/RadioButton"
                                android:text="Weight machine not available" />

                            <RadioButton
                                android:id="@+id/lhwf1e5b_2"
                                style="@style/RadioButton"
                                android:text="Weight machine out of order" />

                            <RadioButton
                                android:id="@+id/lhwf1e5b_3"
                                style="@style/RadioButton"
                                android:text="Birth weight not recorded in facility " />

                            <RadioButton
                                android:id="@+id/lhwf1e5b_4"
                                style="@style/RadioButton"
                                android:text="Baby was delivered in some other area" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e5b ends-->


                <!-- lhwf1e6 starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e6"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e6"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/lhwf1e6" />

                        <RadioGroup
                            android:id="@+id/lhwf1e6"
                            style="@style/RadioGroup"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/lhwf1e6_1"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_yes" />

                            <RadioButton
                                android:id="@+id/lhwf1e6_2"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_no" />

                            <RadioButton
                                android:id="@+id/lhwf1e6_3"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_na"
                                android:visibility="gone" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e6 ends-->


                <!-- lhwf1e6b starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e6b"
                    style="@style/Q_CardView"
                    android:visibility='@{lhwf1e62.checked? View.GONE : View.VISIBLE}'>

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e6b"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="Mother initiated breastfeeding (within 24 hours)" />

                        <RadioGroup
                            android:id="@+id/lhwf1e6b"
                            style="@style/RadioGroup"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/lhwf1e6b_1"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_yes" />

                            <RadioButton
                                android:id="@+id/lhwf1e6b_2"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_no" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e6b ends-->


                <!-- lhwf1e7 starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e7"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e7"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/lhwf1e7" />

                        <RadioGroup
                            android:id="@+id/lhwf1e7"
                            style="@style/RadioGroup"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/lhwf1e7_1"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_yes" />

                            <RadioButton
                                android:id="@+id/lhwf1e7_2"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_no" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e7 ends-->


                <!-- lhwf1e7b starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e7b"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e7b"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="Record keeping for BCG vaccine  given after birth" />

                        <RadioGroup
                            android:id="@+id/lhwf1e7b"
                            style="@style/RadioGroup"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/lhwf1e7b_1"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_yes" />

                            <RadioButton
                                android:id="@+id/lhwf1e7b_2"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_no" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e7b ends-->


                <!-- lhwf1e8 starts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvlhwf1e8"
                    style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/Lv_lhwf1e8"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/lhwf1e8" />

                        <RadioGroup
                            android:id="@+id/lhwf1e8"
                            style="@style/RadioGroup"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/lhwf1e8_1"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_yes" />

                            <RadioButton
                                android:id="@+id/lhwf1e8_2"
                                style="@style/RadioButton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/rb_no" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- lhwf1e8 ends-->


            </LinearLayout>


            <!-- Button Next Starts-->
            <androidx.cardview.widget.CardView style="@style/Q_CardView">

                <Button
                    android:id="@+id/btn_Next"
                    style="@style/Button_Next"
                    android:layout_margin="10dp"
                    android:layout_weight="50"
                    android:text="Submit " />

            </androidx.cardview.widget.CardView>
            <!-- Button Next Ends-->

        </LinearLayout>

    </ScrollView>

</layout>
